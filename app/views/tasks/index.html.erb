<h1>Tasklist</h1>
<% if logged_in? %>
  <p>ログインユーザ: <%= current_user.name %></p>
  
  <h2>タスク一覧</h2>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>

  <%= link_to '新規タスクの投稿', new_task_path %><br>
  <%= link_to 'ログアウト', logout_path, method: :delete %>
  
<% else %>
  <%= link_to 'ログイン', login_path %><br>
  <%= link_to 'サインイン', signup_path %>

<% end %>
